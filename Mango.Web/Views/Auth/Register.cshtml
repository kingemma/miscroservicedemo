@model RegisterationRequestDto
<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Name..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Firstname" class="form-control" placeholder="Firstname..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="LastName" class="form-control" placeholder="LastName..." />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList" >
                    <option disabled selected>--selected Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>

</form>